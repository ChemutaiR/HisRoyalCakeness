{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    // Error reporting
    "no-unused-vars": "error",
    "no-undef": "error",
    "no-console": "warn",
    "no-debugger": "error",
    
    // React specific
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "error",
    "react/jsx-key": "error",
    
    // Code quality
    "prefer-const": "error",
    "no-var": "error",
    "no-redeclare": "error",
    "no-unreachable": "error"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
